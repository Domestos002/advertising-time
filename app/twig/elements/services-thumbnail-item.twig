<div class="width-1-3 lg-width-1-2 sm-width-12">
    <div class="thumbnail centered">
        <div class="thumbnail__top">
            <div class="thumbnail__img">
                <a href="#" class="lh-0">
                    <svg class="svg-icon icon-{{ icon }}">
                        <use xlink:href="images/svg-icons.svg#{{ icon }}"/>
                    </svg>
                </a>
            </div>
            <div class="fz22 text-uppercase thumbnail-text fx fx-middle fx-center">
                <p>{{ title }}</p>
            </div>
        </div>
        <div class="thumbnail-caption">
            <p>{{ text }}</p>
        </div>
    </div>
</div>