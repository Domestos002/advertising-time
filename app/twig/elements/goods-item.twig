<div class="goods-item fx md-fx-column md-fx-middle fx-left">
    <div class="goods-item__img">
        <div class="img-wrapper"><img src="http://via.placeholder.com/400x300" alt=""></div>
    </div>
    <div class="goods-item__caption push-right-1">
        <div class="goods-item__caption-inner">
            <div class="goods-item__title">
                <p>{{ title }}</p>
            </div>
            <div>
                <p>{{ text }}</p>
            </div>
        </div>
        <span class="goods-item__price">
            от <span>25</span> руб/см
        </span>
    </div>
</div>